<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs')  %> 
    <link rel="stylesheet" href="/css/style_admin.css">
    <link rel="stylesheet" href="/css/search_bar.css">
    
</head>
<body class="bodyAdmin__admin"></body>
    <header>
        <%- include ('../partials/header.ejs')  %> 
        <%- include('../partials/search_bar')%> 
    </header>



    
        <main class="cont__admin">
 
          <!--Administrador de productos-->
          <br>
          <section class="row">
            <article class="col-12 ">
              <h2 class="adminH2__admin">Administrador de Productos</h2>
            </article>
            <article class="col-12">
              <button class="btnCreate__Create"><a href="/admin/create"><ion-icon name="add-circle-outline"></ion-icon>Agregar</a></button>
            </article>

            <article class="col-12" >
            <table class="tableAdmin__Admin">
                <thead>
                  
                  <thead>
                    <tr>
                      <th class="styleTable__admin">Id</th>
                      <th class="styleTable__admin">Nombre</th>
                      <th class="styleTable__admin">Ver</th>
                      <th class="styleTable__admin">Editar</th>
                      <th class="styleTable__admin">Borrar</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% data_games2.forEach(data_games2=> { %>
                      <tr>
                        <td class="styleTable__admin">
                          <%= data_games2.id %>
                        </td>
                        <td class="styleTable__admin">
                          <%= data_games2.title %>
                        </td>
                    
                        <td class="styleTable__admin"><a href="/administrar/detail/<%= data_games2.id%> ">
                            <ion-icon name="eye-outline"></ion-icon>
                          </a></td>
                        <td class="styleTable__admin"><a href="/administrar/edit/<%= data_games2.id%> ">
                            <ion-icon name="pencil-outline"></ion-icon>
                          </a></td>
                        <td class="styleTable__admin"><a href="/administrar/delete/<%= data_games2.id%>">
                            <ion-icon name="trash-outline"></ion-icon>
                            
                            
                                                  
                          </a></td>
                      </tr>
                      <% }); %>
                  </tbody>
              </table>  
            </article>       
          </section>
          <script src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js"></script>
        </main>
      </body>
    </html>


    <footer>
        <%- include ('../partials/footer.ejs')  %>  
    </footer>
</body>
</html>


