<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs')  %> 
</head>

<header>
    <%- include ('../partials/header.ejs')  %> 
</header>



    <body>
        <main class="container-fluid">
 
          <!--Administrador de productos-->
          <br>
          <section class="row">
            <article class="col-12 ">
              <h2 class="display-4 text-white bg-info text-center pt-2">Administrador de Productos</h2>
            </article>
            <article class="col-12">
              <a href="/administrar/create"><ion-icon name="add-circle-outline"></ion-icon>Agregar</a>
            </article>

            <article class="col-12" >
            <table class="table">
                <thead>
                  <tr>
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Ver</th>
                <th scope="col">Editar</th>
                <th scope="col">Borrar</th>
              </tr>
            </thead>
                <tbody>
                  <% data_games2.forEach(data_games2 => { %>
                  <tr>
                    <td><%= data_games2.id %> </td>
                    <td><%= data_games2.title %> </td>

                    <td><a href="/administrar/detail/<%= data_games2.id%> "> <ion-icon name="eye-outline"></ion-icon></a></td>
                    <td><a href="/administrar/edit/<%= data_games2.id%> "> <ion-icon name="pencil-outline"></ion-icon></a></td>
                    <td><a href="/administrar/delete/<%= data_games2.id%>"><ion-icon name="trash-outline"></ion-icon></a></td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>  
            </article>       
          </section>
          <script src="https://unpkg.com/ionicons@5.2.3/dist/ionicons.js"></script>
        </main>
      </body>
    </html>


    <footer>
        <%- include ('../partials/footer.ejs')  %>  
    </footer>
</body>
</html>


